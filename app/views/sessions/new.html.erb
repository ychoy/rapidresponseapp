<div class="container">
  <h1 class="text-center">Login</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: "/sessions", method: "post" do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", class: "form-control", autofocus: true %>
      </div>
      <div class="actions">
        <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
