<% if @user.helping %>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="col-md-4">
      <h3> <strong><%= @user.prefix %> <%= @user.first_name %> <%= @user.last_name %></h3>
      <p><strong>Email: </strong><%= @user.email %></p>
    </div>
    <div class="col-md-8">
      <p><strong>Title:</strong><%= @user.title %></p>
      <p><strong>Company:</strong><%= @user.company %></p>
      <p><strong>Address:</strong><%= @user.address %></p>
      <p><strong>Biography:</strong><%= @user.biography %></p>
    </div>
  </div>

<% else %>
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="col-md-4">
      <h3> <strong><%= @user.prefix %> <%= @user.first_name %> <%= @user.last_name %></h3>
      <p><strong>Email: </strong><%= @user.email %></p>
    </div>
    <div class="col-md-8">
      <p><strong>Under 18?</strong>
        <% if @user.danger? %>
          Yes
        <% else %>
          No
        <% end %>
      </p>
      <p><strong>In danger?</strong>
        <% if @user.danger? %>
          Yes
        <% else %>
          No
        <% end %>
      </p>
      <p><strong>Has Been In Contact with ICE within 24 hours?</strong>
        <% if @user.contact_ice_24_hours? %>
          Yes
        <% else %>
          No
        <% end %>
    </div>
  </div>

<% end %>
